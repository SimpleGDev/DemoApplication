<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pkdev.demoapplication" >

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".menu.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".materialdesign.fab.FabActivity" />
        <activity android:name=".materialdesign.drawer.NavigationDrawerActivity" />
        <activity android:name=".materialdesign.viewpager.ViewPagerActivity" />
        <activity android:name=".materialdesign.CardViewActivity" />
        <activity android:name=".materialdesign.notification.NotificationActivity"/>

        <service
            android:name=".materialdesign.notification.DemoIntentService"
            android:exported="false" >
        </service>
    </application>

</manifest>
